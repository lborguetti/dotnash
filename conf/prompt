#!/usr/bin/env nash

#
# PROMPT: is a special variable used by nash command  line to setup your prompt.
#
var defprompt = $NASH_FG_LRED+"❯"+$NASH_FG_LYELLOW+"❯"+$NASH_FG_LGREEN+"❯ "+$NASH_RESET

setenv PROMPT = $defprompt

fn updatePrompt() {
	var current_dir, status <= pwd | sed -e "s@"+$HOME+"@~@g;s@/data/Home@~@g;s@/data/Work@~/Work@g"

	if $status == "0" {
		var out <= split($current_dir, "/")
		var len_out <= len($out)
		var _, status <= test $len_out -ge "3"

		if $status == "0" {
			current_dir = ""

			var dir = ""

			var last_cut <= expr $len_out - 2
			var seq <= seq 0 $last_cut
			var range <= split($seq, "\n")

			for r in $range {
				var _, status <= echo $out[$r] | grep "^\\."

				if $status == "0" {
					dir <= echo $out[$r] | cut -c 1-2
				} else {
					dir <= echo $out[$r] | cut -c 1
				}

				current_dir = $current_dir+$dir+"/"
			}

			var last <= expr $len_out - 1

			current_dir = $current_dir+$out[$last]
		}

		current_dir = $NASH_FG_LBLUE+$current_dir+$NASH_RESET
	}

	var branch, status <= git rev-parse --abbrev-ref HEAD >[2=]

	if $status == "0" {
		var git_prompt = "git:("+$NASH_RED+$branch+$NASH_RESET+")"
		var prompt = $current_dir+" "+$git_prompt+" "+$defprompt
	} else {
		var prompt = $current_dir+" "+$defprompt
	}

	setenv PROMPT = $prompt
}

fn nash_repl_before() {
	updatePrompt()
}
