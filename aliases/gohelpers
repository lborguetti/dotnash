#!/usr/bin/env nash

#
# Some golang helpers
#

# syntax sugar to cd into go project
fn gocd(path) {
	chdir($GOPATH+"/src/"+$path)
}

bindfn gocd gocd

fn gomk(path) {
	var mkpath = $GOPATH+"/src/"+$path

	var _, status <= test -d $mkpath

	if $status != "0" {
		mkdir -p $mkpath
		echo "Directory created: "+$mkpath
		gocd $path
	}
}

bindfn gomk gomk
