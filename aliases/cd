#!/usr/bin/env nash

#
# cd: overrides built-in cd, looks for directories in CDPATH variable
#

fn __docd(path) {
	chdir($path)
}

fn cd(path) {
	if $path == "" {
		__docd($HOME)
		
		return
	}

	var _, status <= echo $path | grep "^/" >[1=]

	if $status != "0" {
		pwd <= pwd | tr -d "\n"
		
		var newpath = $pwd+"/"+$path
		
		var _, status <= test -d $newpath
		
		if $status == "0" {
			__docd($newpath)
			
			return
		}
		
		for prefix in $CDPATH {
			newpath = $prefix+"/"+$path
		
			var _, status <= test -d $newpath
		
			if $status == "0" {
				__docd($newpath)
				
				return
			}
		}
	}

	var path, status <= echo -n $path | sed "s#^~#"+$HOME+"#g" | tr -d "\n"

	__docd($path)
}

bindfn cd cd
